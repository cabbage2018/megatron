{
	"restartable": "rs",
	"ignore": [
		".git",
		"node_modules",
		"public"
	],
	"verbose": true,
	"execMap": {
		"": "node",
		"js": "node --harmony"
	},
	"events": {
		"restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
	},
	"watch": [
		"routes",
		"bin/**",
		"views/**/*"
	],
	"env": {
		"NODE_ENV": "development",
		"PORT": "3000"
	},
	"ext": "js json",
	"legacy-watch": false,
	"server": "nodemon ./bin/www",
	"exec": "node ./bin/www"
}